# it under the terms of the GNU General Public License as published by
# the Free Software Foundation, either version 3 of the License, or
# (at your option) any later version.
# This program is distributed in the hope that it will be useful,
# but WITHOUT ANY WARRANTY; without even the implied warranty of
# MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
# GNU General Public License for more details.
# You should have received a copy of the GNU General Public License
# along with this program.  If not, see <https://www.gnu.org/licenses/>.

# Process arguments 🧐
if [ "$1" = "-h" ] || [ "$1" = "--help" ] || [ "$#" = "0" ]
then
  echo "Usage: $(basename "$0") file ..."
  exit 0
fi

# Define the C💯 Translation Table 🔥
sed_script=""
sed_script+="s/auto /🚗 /g;"
sed_script+="s/\{auto /\{🚗 /g;"
sed_script+="s/break;/🤯;/g;"
sed_script+="s/\{break;/\{🤯;/g;"
sed_script+="s/case /🧐 /g;"
sed_script+="s/\{case /\{🧐 /g;"
sed_script+="s/char /🪑 /g;"
sed_script+="s/\(char /\(🪑 /g;"
sed_script+="s/\{char /\{🪑 /g;"
sed_script+="s/<char>/<🪑>/g;"
sed_script+="s/const /🗿 /g;"
sed_script+="s/\{const /\{🗿 /g;"
sed_script+="s/continue;/😍;/g;"
sed_script+="s/\{continue;/\{😍;/g;"
sed_script+="s/default:/😀:/g;"
sed_script+="s/\{default:/\{😀:/g;"
sed_script+="s/do /🫡 /g;"
sed_script+="s/do\{/🫡\{/g;"
sed_script+="s/double /😳 /g;"
sed_script+="s/\(double /\(😳 /g;"
sed_script+="s/\{double /\{😳 /g;"
sed_script+="s/<double>/<😳>/g;"
sed_script+="s/else / 🤷 /g;"
sed_script+="s/else\{/🤷\{/g;"
sed_script+="s/\}else\{/\}🤷\{/g;"
sed_script+="s/enum /😌 /g;"
sed_script+="s/\{enum /\{😌 /g;"
sed_script+="s/extern /😏 /g;"
sed_script+="s/\{extern /\{😏 /g;"
sed_script+="s/float /🚢 /g;"
sed_script+="s/\(float /\(🚢 /g;"
sed_script+="s/\{float /\{🚢 /g;"
sed_script+="s/<float>/<🚢>/g;"
sed_script+="s/for /🙄 /g;"
sed_script+="s/for\{/🙄\{/g;"
sed_script+="s/\}for\{/\}🙄\{/g;"
sed_script+="s/goto /🚶‍♀️ /g;"
sed_script+="s/inline /😑 /g;"
sed_script+="s/\{inline /\{😑 /g;"
sed_script+="s/int /😉 /g;"
sed_script+="s/\(int /\(😉 /g;"
sed_script+="s/\{int /\{😉 /g;"
sed_script+="s/<int>/<😉>/g;"
sed_script+="s/long /🤥 /g;"
sed_script+="s/\(long /\(🤥 /g;"
sed_script+="s/\{long /\{🤥 /g;"
sed_script+="s/<long>/<🤥>/g;"
sed_script+="s/register /🤑 /g;"
sed_script+="s/\{register /\{🤑 /g;"
sed_script+="s/restrict /🤐 /g;"
sed_script+="s/return /😘 /g;"
sed_script+="s/\{return /\{😘 /g;"
sed_script+="s/short /😶 /g;"
sed_script+="s/\(short /\(😶 /g;"
sed_script+="s/\{short /\{😶 /g;"
sed_script+="s/<short>/<😶>/g;"
sed_script+="s/signed /😇 /g;"
sed_script+="s/\{signed /\{😇 /g;"
sed_script+="s/sizeof\(/👀\(/g;"
sed_script+="s/static /🥶 /g;"
sed_script+="s/\{static /\{🥶 /g;"
sed_script+="s/struct /🤧 /g;"
sed_script+="s/\{struct /\{🤧 /g;"
sed_script+="s/switch /🙃 /g;"
sed_script+="s/\{switch /\{🙃 /g;"
sed_script+="s/switch\(/🙃\(/g;"
sed_script+="s/typedef /🥸 /g;"
sed_script+="s/\{typedef /\{🥸 /g;"
sed_script+="s/union /☺️ /g;"
sed_script+="s/\{union /\{☺️ /g;"
sed_script+="s/unsigned /😈 /g;"
sed_script+="s/\{unsigned /\{😈 /g;"
sed_script+="s/void /🫥 /g;"
sed_script+="s/\(void /\(🫥 /g;"
sed_script+="s/\{void /\{🫥 /g;"
sed_script+="s/<void>/<🫥>/g;"
sed_script+="s/volatile /😶‍🌫️ /g;"
sed_script+="s/\{volatile /\{😶‍🌫️ /g;"
sed_script+="s/while /😵‍💫 /g;"
sed_script+="s/while\{/😵‍💫\{/g;"
sed_script+="s/\}while\{/\}😵‍💫\{/g;"
sed_script+="s/_Bool /🤖 /g;"
sed_script+="s/\(_Bool /\(🤖 /g;"
sed_script+="s/\{_Bool /\{🤖 /g;"
sed_script+="s/<_Bool>/<🤖>/g;"
sed_script+="s/_Complex /🫠 /g;"
sed_script+="s/\(_Complex /\(🫠 /g;"
sed_script+="s/\{_Complex /\{🫠 /g;"
sed_script+="s/<_Complex>/<🫠>/g;"
sed_script+="s/_Imaginary /👻 /g;"
sed_script+="s/\(_Imaginary /\(👻 /g;"
sed_script+="s/\{_Imaginary /\{👻 /g;"
sed_script+="s/<_Imaginary>/<👻>/g;"
sed_script+="s/#include /🤣🥳 /g;"
sed_script+="s/#define /🤣🤓 /g;"
sed_script+="s/#undef /🤣🤫 /g;"
sed_script+="s/#ifdef /🤣🤔🤓 /g;"
sed_script+="s/#ifndef /🤣🤔🤫 /g;"
sed_script+="s/#elif /🤣🤨 /g;"
sed_script+="s/#if /🤣🤔 /g;"
sed_script+="s/#else /🤣🤷 /g;"
sed_script+="s/#endif /🤣😵 /g;"
sed_script+="s/if /🤔 /g;"
sed_script+="s/if\{/🤔\{/g;"
sed_script+="s/#line /🤣🫤 /g;"
sed_script+="s/#error /🤣💀 /g;"
sed_script+="s/#pragma /🤣🤗 /g;"
sed_script+="s/_Pragma /🤣🤗🤭 /g;"
sed_script+="s/++/👆/g;"
sed_script+="s/-/👇/g;"
sed_script+="s/+/👍/g;"
sed_script+="s/-/👎/g;"
sed_script+="s/*/🙌/g;"
sed_script+="s/\//🖖/g;"
sed_script+="s/%/💩/g;"
sed_script+="s/==/🤝/g;"
sed_script+="s/!=/🖕🤝/g;"
sed_script+="s/>=/🤘🤝/g;"
sed_script+="s/<=/🤙🤝/g;"
sed_script+="s/=/👉/g;"
sed_script+="s/>>/🤛/g;"
sed_script+="s/<</🤜/g;"
sed_script+="s/->/🫵/g;"
sed_script+="s/>/🤘/g;"
sed_script+="s/</🤙/g;"
sed_script+="s/!/🖕/g;"
sed_script+="s/&&/🤞🤞/g;"
sed_script+="s/\|\|/✌️✌️/g;"
sed_script+="s/&/🤞/g;"
sed_script+="s/\|/✌️/g;"
sed_script+="s/\^/🤌/g;"
sed_script+="s/~/🫰/g;"

# Convert C 👴 files to C💯 files 😱🤘
for file in "$@"
do
  sed -E "$sed_script" "$file" > "$file"💯
done
